<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderEditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#F0739D"
        android:orientation="horizontal"
        >
        <Button

            android:id="@+id/btn_order_edit_back_order_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:paddingLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:text="Chỉnh sửa đơn hàng"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />
    </LinearLayout>

    <EditText
        android:enabled="false"
        android:id="@+id/ed_order_edit_receiverName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:drawableLeft="@drawable/baseline_create_24"
        android:drawablePadding="10dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_status"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Trạng thái"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="14sp"/>
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner_order_status"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/baseline_call_missed_outgoing_24"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tổng cộng"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="14sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/ed_order_edit_totalPrice"
        android:drawableLeft="@drawable/baseline_call_missed_outgoing_24"
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:drawablePadding="10dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_creat_time"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ngày tạo đơn"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="14sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/ed_order_edit_created_at"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:layout_width="300dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="40dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_order_save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Lưu Lại"
            android:background="@color/colorBlue"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_order_back_to_order_detail"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="NỘI DUNG ĐƠN HÀNG"
            android:background="@color/redcart"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>