<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#F0739D"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_backToProfile_profileForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:paddingLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:text="Hồ sơ người dùng"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập họ"
            android:id="@+id/ed_firstName_profile"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redcart"
            android:textSize="12dp"
            android:id="@+id/first_name_error_message"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập tên"
            android:id="@+id/ed_lastName_profile"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redcart"
            android:textSize="12dp"
            android:id="@+id/last_name_error_message"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập mật khẩu"
            android:id="@+id/ed_password_profile"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redcart"
            android:textSize="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:hint="Ngày sinh"
                android:id="@+id/ed_dateOfBirth_profile"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/show_date_picker_btn"
                android:backgroundTint="#F0739D"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:text="Chọn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Gioi tinh"/>
            <Spinner
                android:id="@+id/sp_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/redcart"
            android:textSize="12dp"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelPhotoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Image"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="start"
                android:paddingBottom="8dp"/>

            <!-- Button to Choose Image -->
            <Button
                android:layout_marginLeft="40dp"
                android:id="@+id/buttonChooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_userPhoto"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/main_color"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="Hủy bỏ"/>
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="wrap_content"
            android:text="Cập nhật"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:background="@color/main_color"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>