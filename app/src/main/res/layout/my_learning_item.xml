<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingVertical="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_course_learning"
        android:src="@drawable/course_image_test"
        android:layout_width="80dp"
        android:scaleType="fitXY"
        android:layout_height="80dp"/>
    <LinearLayout
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_courseTitle_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="course title"/>
        <TextView
            android:id="@+id/tv_courseInstructor_learning"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="instructor name"/>
        <ProgressBar
            android:id="@+id/pb_rating_learning"
            android:progress="93"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <TextView
            android:id="@+id/tv_coursePrice_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="93% complete"/>
    </LinearLayout>

</LinearLayout>